<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/bg_corners_8dp"
    tools:background="@color/blue_8187ff"
    tools:context=".partydetail.PartyDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back_26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/titleStyleWhite"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="礦坑團" />

            <TextView
                android:id="@+id/tv_already_join"
                style="@style/alreadyJoin"
                android:layout_marginStart="16dp"
                android:text="@string/already_join"
                app:layout_constraintStart_toEndOf="@+id/tv_title"
                app:layout_constraintTop_toTopOf="@+id/tv_title" />

            <View
                android:id="@+id/view_line_title"
                style="@style/view_line_white"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_games"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_corners_4dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_title">

                <TextView

                    android:id="@+id/tv_title_game_list"
                    style="@style/titleStyleWhite2"
                    android:layout_marginTop="16dp"
                    android:text="@string/play_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_game_list"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_game_normal" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@id/tv_title_host"
                style="@style/titleStyleWhite2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/host_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_games" />

            <TextView
                android:id="@id/tv_host"
                style="@style/textStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_host"
                app:layout_constraintStart_toEndOf="@id/tv_title_host"
                app:layout_constraintTop_toTopOf="@id/tv_title_host"
                tools:text="AKuan" />

            <View
                android:id="@+id/view_line_host"
                style="@style/view_line_white"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_host" />

            <TextView
                android:id="@id/tv_title_location"
                style="@style/titleStyleWhite2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/location_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_host" />

            <TextView
                android:id="@id/tv_location"
                style="@style/textStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_location"
                app:layout_constraintStart_toEndOf="@id/tv_title_location"
                app:layout_constraintTop_toTopOf="@id/tv_title_location"
                tools:text="台北市-基隆路一段178號" />

            <View
                android:id="@+id/view_line_location"
                style="@style/view_line_white"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_location" />

            <TextView
                android:id="@id/tv_title_time"
                style="@style/titleStyleWhite2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/time_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_location" />

            <TextView
                android:id="@id/tv_time"
                style="@style/textStyleWhite"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_time"
                app:layout_constraintStart_toEndOf="@id/tv_title_time"
                app:layout_constraintTop_toTopOf="@id/tv_title_time"
                tools:text="2021/10/22(五) 20:00" />

            <View
                android:id="@+id/view_line_time"
                style="@style/view_line_white"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_time" />

            <TextView
                android:id="@+id/tv_title_note"
                style="@style/titleStyleWhite2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/note_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_time" />

            <TextView
                android:id="@+id/tv_note"
                style="@style/textStyleWhite"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_title_note"
                app:layout_constraintTop_toTopOf="@id/tv_title_note"
                tools:text="提供提供兩箱啤酒兩箱提供兩箱啤酒提供兩箱啤酒啤酒提提供兩提供兩箱啤酒箱啤酒供兩箱啤酒" />

            <View
                android:id="@+id/view_line_note"
                style="@style/view_line_white"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_note" />

            <TextView
                android:id="@+id/tv_title_require_player"
                style="@style/titleStyleWhite2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="人數:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_note" />

            <TextView
                android:id="@+id/tv_require_player"
                style="@style/textStyleWhite"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_title_require_player"
                app:layout_constraintTop_toTopOf="@id/tv_title_require_player"
                tools:text="2/4人 (缺)" />

            <View
                android:id="@+id/view_line_require_player"
                style="@style/view_line_white"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_view_player" />


            <TextView

                android:id="@+id/tv_title_msg"
                style="@style/titleStyleWhite2"

                android:layout_marginTop="22dp"
                android:text="@string/msg"
                app:layout_constraintStart_toStartOf="@id/tv_title_require_player"
                app:layout_constraintTop_toBottomOf="@+id/btn_view_player" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_rv_msg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_msg"
                tools:itemCount="5"
                tools:listitem="@layout/item_party_msg" />

            <Button
                android:id="@+id/btn_view_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_people_18"
                android:text="參加者名單"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_line_note" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/titleStyleWhite2"
        android:id="@+id/btn_in_out"
        android:layout_width="55dp"
        android:layout_marginEnd="4dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_corners_4dp"
        android:elevation="@dimen/elevation_4dp"
        android:text="@string/out"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:textColor="#ff5679"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
