<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kappstudio.jotabletopgame.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/nav_to_party_detail_fragment"
            app:destination="@id/partyDetailFragment" />
        <action
            android:id="@+id/nav_to_new_party_fragment"
            app:destination="@id/newPartyFragment" />
    </fragment>


    <fragment
        android:id="@+id/gameFragment"
        android:name="com.kappstudio.jotabletopgame.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/toolFragment"
        android:name="com.kappstudio.jotabletopgame.tool.ToolFragment"
        android:label="fragment_tool"
        tools:layout="@layout/fragment_tool" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kappstudio.jotabletopgame.profile.ProflieFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />


    <fragment
        android:id="@+id/partyDetailFragment"
        android:name="com.kappstudio.jotabletopgame.partydetail.PartyDetailFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="selectedPartyId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/newPartyFragment"
        android:name="com.kappstudio.jotabletopgame.newparty.NewPartyFragment"
        android:label="fragment_new_party"
        tools:layout="@layout/fragment_new_party" >

    </fragment>



</navigation>